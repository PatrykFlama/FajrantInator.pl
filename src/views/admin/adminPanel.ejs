<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
<body>
    <div class="form-container">
        <div class="container">
            <h1>Add New User</h1>

            <% if (messageUser) { %>
                <p><%= messageUser %></p>
            <% } %>

            <form action="/admin/addUser" method="POST">
                <label for="username">Username:</label>
                <input type="text" name="username" required>
                
                <label for="password">Password:</label>
                <input type="password" name="password" required>
                
                <label for="email">Email:</label>
                <input type="text" name="email" required>
                
                <label for="type">Type:</label>
                <input type="text" name="type" required>
                
                <input type="submit" value="Add User">
            </form>

            <div class="button-container">
                <button onclick="window.location.href='/admin/displayUsers'"> Display Users </button>
            </div>
        </div>
    
        <div class="container">
            <h1>Add New Product</h1>

            <% if (messageProduct) { %>
                <p><%= messageProduct %></p>
            <% } %>

            <form action="/admin/addProduct" method="POST">
                <label for="name">Name:</label>
                <input type="text" name="name" required>
                
                <label for="description">Description:</label>
                <input type="text" name="description" required>
                
                <label for="price">Price:</label>
                <input type="number" name="price" required>
                
                <label for="image">Image:</label>
                <input type="text" name="image" required>
                
                <label for="courseName">Course Name:</label>
                <input type="text" name="courseName" required>
                
                <label for="listNumber">List Number:</label>
                <input type="number" name="listNumber" required>
                
                <label for="taskNumber">Task Number:</label>
                <input type="number" name="taskNumber" required>

                <label for="solution">Solution description:</label>
                <input type="text" name="solutionDescription" required>

                <input type="submit" value="Add Product">
            </form>
        </div>
    </div>

    <div class="button-container">
        <button onclick="window.location.href = '/';">Back</button>
    </div>
</body>
</html>
