<!-- views/userAccount/editProduct.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
</head>
<body>
    <header>
        <h1>Edit Product</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/account">User Account</a></li>
            <li><a href="/account/addedProducts">Added Products</a></li>
        </ul>
    </nav>

    <section>
        <h2>Edit Product</h2>

        <form method="post" action="/account/editProduct/saveProduct">
            <input type="hidden" id="productID" name="productID" value="<%= product._id %>">

            <label for="name">Product Name:</label>
            <input type="text" id="name" name="name" value="<%= product.name %>" required>

            <label for="description">Product Description:</label>
            <input type="text" id="description" name="description" value="<%= product.description %>" required>

            <label for="price">Product price:</label>
            <input type="text" id="price" name="price" value="<%= product.price %>" required>

            <label for="courseName">Product courseName:</label>
            <input type="text" id="courseName" name="courseName" value="<%= product.courseName %>" required>

            <label for="listNumber">Product listNumber:</label>
            <input type="text" id="listNumber" name="listNumber" value="<%= product.listNumber %>" required>

            <label for="taskNumber">Product taskNumber:</label>
            <input type="text" id="taskNumber" name="taskNumber" value="<%= product.taskNumber %>" required>

            <label for="code">Product Code:</label>
            <input type="text" id="code" name="code" value="<%= product.solutionCode %>" required>

            <button type="submit">Save Changes</button>
        </form>
    </section>

</body>
</html>
